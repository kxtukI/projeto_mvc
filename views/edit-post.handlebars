<article>  
  <h2>Editar Post</h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />      
    </div>
    <div>
      Postado por mim em {{format_date post.created_at}}
      |
      {{post.comments.length}} {{format_plural "coment√°rio" post.comments.length}}
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea id="post-text" name="post-text">{{post.post_text}}</textarea>
    </div>
    <button type="submit">Salvar</button>
    <button type="button" class="delete-post-btn">Deletar</button>
  </form>
</article>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
